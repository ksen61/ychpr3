<Window x:Class="practica1ef.WarehouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica1ef"
        mc:Ignorable="d"
        Title="WarehouseWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="gridStorehouse" AutoGenerateColumns="True" Margin="0,0,0,227" SelectionChanged="gridStorehouse_SelectionChanged"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Height="36" Margin="2,305,0,0" VerticalAlignment="Top" Width="788" Click="Button_Click"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Height="36" Margin="2,346,0,0" VerticalAlignment="Top" Width="788" Click="Button_Click_2"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Height="36" Margin="2,388,0,0" VerticalAlignment="Top" Width="788" Click="Button_Click_1"/>
        <TextBox x:Name="NameTbx5" HorizontalAlignment="Left" Height="37" Margin="400,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390"/>
        <ComboBox x:Name="NameTbx4" HorizontalAlignment="Left" Height="37" Margin="5,261,0,0" VerticalAlignment="Top" Width="390" DisplayMemberPath="ProductName" SelectedValuePath="ProductID"/>
    </Grid>
</Window>
